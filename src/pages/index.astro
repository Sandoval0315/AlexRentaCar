<style>
  /* Features Section */
  .features {
    padding: 5rem 0;
    background: #f8fafc;
  }

  .features h2 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #1f2937;
    font-weight: 700;
  }

  .grid {
    display: grid;
    gap: 2rem;
  }

  .grid-cols-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .feature-card {
    text-align: center;
    padding: 2.5rem 1.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid #e5e7eb;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .feature-icon {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #dc2626;
    font-weight: 600;
  }

  .feature-card p {
    color: #6b7280;
    line-height: 1.6;
  }

  /* CTA Section */
  .cta {
    background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
    padding: 5rem 0;
    color: white;
  }

  .cta h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 700;
  }

  .cta p {
    font-size: 1.25rem;
    color: #d1d5db;
    max-width: 600px;
    margin: 0 auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .text-center {
    text-align: center;
  }

  .mb-4 {
    margin-bottom: 2rem;
  }

  /* Botones globales */
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    font-family: 'Lexend', sans-serif;
  }

  .btn-primary {
    background: #dc2626;
    color: white;
  }

  .btn-primary:hover {
    background: #b91c1c;
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border-color: white;
  }

  .btn-secondary:hover {
    background: white;
    color: #1f2937;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .grid-cols-3 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .features,
    .cta {
      padding: 3rem 0;
    }

    .features h2,
    .cta h2 {
      font-size: 2rem;
    }

    .grid-cols-3 {
      grid-template-columns: 1fr;
    }

    .feature-card {
      padding: 2rem 1rem;
    }

    .container {
      padding: 0 1rem;
    }

    .cta p {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .features h2,
    .cta h2 {
      font-size: 1.75rem;
    }

    .btn {
      padding: 0.875rem 1.5rem;
      font-size: 0.95rem;
    }
  }
</style>