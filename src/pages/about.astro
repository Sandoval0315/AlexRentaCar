---
// pages/nosotros.astro
import MainLayout from '../layouts/MainLayout.astro';
import HeroAboutSection from '../components/HeroAboutSection.astro';

// Datos de la galería
const galleryImages = [
  {
    src: "/img/about-gallery-1.jpg",
    alt: "Nuestra flota de vehículos"
  },
  {
    src: "/img/about-gallery-2.jpg",
    alt: "Atención al cliente personalizada"
  },
  {
    src: "/img/about-gallery-3.jpg",
    alt: "Instalaciones modernas"
  },
  {
    src: "/img/about-gallery-4.jpg",
    alt: "Equipo de trabajo"
  },
  {
    src: "/img/about-gallery-5.jpg",
    alt: "Servicio de mantenimiento"
  },
  {
    src: "/img/about-gallery-6.jpg",
    alt: "Clientes satisfechos"
  }
];

// Datos del equipo
const teamMembers = [
  {
    name: "Alex Rodríguez",
    position: "Fundador & CEO",
    image: "/img/team-alex.jpg",
    description: "Más de 10 años de experiencia en la industria automotriz"
  },
  {
    name: "María Hernández",
    position: "Gerente de Operaciones",
    image: "/img/team-maria.jpg",
    description: "Especialista en servicio al cliente y logística"
  },
  {
    name: "Carlos Martínez",
    position: "Jefe de Flota",
    image: "/img/team-carlos.jpg",
    description: "Encargado del mantenimiento y calidad de vehículos"
  }
];

// Valores de la empresa
const companyValues = [
  {
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
    title: "Confianza",
    description: "Construimos relaciones duraderas basadas en la transparencia y honestidad."
  },
  {
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
    title: "Innovación",
    description: "Implementamos tecnología de punta para mejorar tu experiencia de renta."
  },
  {
    icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
    title: "Compromiso",
    description: "Tu satisfacción es nuestra prioridad número uno en cada interacción."
  },
  {
    icon: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z",
    title: "Seguridad",
    description: "Garantizamos vehículos en óptimas condiciones y seguros para tu tranquilidad."
  }
];
---

<MainLayout title="Acerca de Nosotros - Alex Renta Cars">
  <!-- Hero Section -->
  <HeroAboutSection />

  <!-- Sección de Historia -->
  <section class="about-history">
    <div class="container">
      <div class="about-grid">
        <div class="about-content">
          <div class="section-header">
            <h2 class="section-title">Nuestra Historia</h2>
            <p class="section-subtitle">
              Desde 2019, transformando la experiencia de renta de vehículos en El Salvador
            </p>
          </div>
          
          <div class="history-text">
            <p>
              Fundada en 2019, Alex Renta Cars nació con la visión de revolucionar el mercado 
              de renta de vehículos en El Salvador. Lo que comenzó como un pequeño emprendimiento 
              con solo 3 automóviles, hoy se ha convertido en una empresa líder con una flota 
              diversa y un equipo comprometido con la excelencia.
            </p>
            <p>
              Nuestro crecimiento se basa en pilares fundamentales: calidad en el servicio, 
              mantenimiento riguroso de nuestra flota y una atención personalizada que nos 
              permite entender y superar las expectativas de cada cliente.
            </p>
            <p>
              Hoy, seguimos innovando y expandiendo nuestros servicios, manteniendo siempre 
              nuestro compromiso con la satisfacción total de quienes confían en nosotros 
              para sus necesidades de movilidad.
            </p>
          </div>

          <div class="history-stats">
            <div class="history-stat">
              <span class="history-stat-number">2019</span>
              <span class="history-stat-label">Año de Fundación</span>
            </div>
            <div class="history-stat">
              <span class="history-stat-number">3 → 50+</span>
              <span class="history-stat-label">Crecimiento de Flota</span>
            </div>
            <div class="history-stat">
              <span class="history-stat-number">1000+</span>
              <span class="history-stat-label">Viajes Realizados</span>
            </div>
          </div>
        </div>
        
        <div class="about-image">
          <img 
            src="/img/about-history.jpg" 
            alt="Historia de Alex Renta Cars"
            class="history-image"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Video -->
  <section class="about-video">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Conoce Nuestra Esencia</h2>
        <p class="section-subtitle">
          Descubre lo que hace especial a Alex Renta Cars a través de nuestro video corporativo
        </p>
      </div>
      
      <div class="video-container">
        <video 
          class="corporate-video"
          controls
          poster="/img/video-poster.png"
        >
          <source src="/videos/toyota2023.mp4" type="video/mp4">
          <source src="/videos/corporativo.webm" type="video/webm">
          Tu navegador no soporta el elemento video.
        </video>
        <div class="video-overlay">
          <button class="play-button" id="play-video">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Sección de Valores -->
  <section class="about-values">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nuestros Valores</h2>
        <p class="section-subtitle">
          Los principios que guían cada decisión y acción en Alex Renta Cars
        </p>
      </div>
      
      <div class="values-grid">
        {companyValues.map((value, index) => (
          <div class="value-card">
            <div class="value-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                <path d={value.icon}/>
              </svg>
            </div>
            <h3>{value.title}</h3>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Galería de Imágenes -->
  <section class="about-gallery">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nuestro Mundo en Imágenes</h2>
        <p class="section-subtitle">
          Un vistazo a nuestras instalaciones, flota y equipo de trabajo
        </p>
      </div>
      
      <div class="gallery-grid">
        {galleryImages.map((image, index) => (
          <div class="gallery-item">
            <img 
              src={image.src} 
              alt={image.alt}
              class="gallery-image"
              loading="lazy"
            />
            <div class="gallery-overlay">
              <span class="gallery-text">{image.alt}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Sección del Equipo -->
  <section class="about-team">
    <div class="container">
      <div class="section-header">
        <h2 class="section-title">Nuestro Equipo</h2>
        <p class="section-subtitle">
          El talento humano que hace posible la excelencia en nuestro servicio
        </p>
      </div>
      
      <div class="team-grid">
        {teamMembers.map((member, index) => (
          <div class="team-card">
            <div class="team-image">
              <img 
                src={member.image} 
                alt={member.name}
                class="member-photo"
              />
            </div>
            <div class="team-info">
              <h3>{member.name}</h3>
              <span class="team-position">{member.position}</span>
              <p>{member.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action Final -->
  <section class="about-cta">
    <div class="container text-center">
      <h2>¿Listo para Experimentar la Diferencia?</h2>
      <p>Únete a nuestra familia de clientes satisfechos y descubre por qué somos la mejor opción en renta de vehículos</p>
      <div class="cta-buttons">
        <a href="/catalogo" class="btn btn-primary">Explorar Catálogo</a>
        <a href="/contacto" class="btn btn-secondary">Solicitar Información</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Estilos base - Reutilizando del index */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .text-center {
    text-align: center;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: 'Lexend', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-family: 'Lexend', sans-serif;
    font-size: 1.1rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    font-family: 'Lexend', sans-serif;
    cursor: pointer;
  }

  .btn-primary {
    background: #dc2626;
    color: white;
  }

  .btn-primary:hover {
    background: #b91c1c;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: #1f2937;
    border-color: #1f2937;
  }

  .btn-secondary:hover {
    background: #1f2937;
    color: white;
    transform: translateY(-2px);
  }

  /* Sección de Historia */
  .about-history {
    padding: 5rem 0;
    background: #ffffff;
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .history-text {
    font-family: 'Lexend', sans-serif;
    color: #6b7280;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .history-text p {
    margin-bottom: 1.5rem;
  }

  .history-stats {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }

  .history-stat {
    text-align: center;
  }

  .history-stat-number {
    display: block;
    font-family: 'Lexend', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: #dc2626;
    margin-bottom: 0.5rem;
  }

  .history-stat-label {
    font-family: 'Lexend', sans-serif;
    font-size: 0.9rem;
    color: #6b7280;
  }

  .about-image {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .history-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .history-image:hover {
    transform: scale(1.05);
  }

  /* Sección de Video */
  .about-video {
    padding: 5rem 0;
    background: #f8fafc;
  }

  .video-container {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .corporate-video {
    width: 100%;
    height: 450px;
    object-fit: cover;
    display: block;
  }

  .video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .video-overlay:hover {
    opacity: 0.9;
  }

  .play-button {
    background: #dc2626;
    color: white;
    border: none;
    border-radius: 50%;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .play-button:hover {
    background: #b91c1c;
    transform: scale(1.1);
  }

  /* Sección de Valores */
  .about-values {
    padding: 5rem 0;
    background: #ffffff;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .value-card {
    text-align: center;
    padding: 2.5rem 1.5rem;
    background: #f8fafc;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: #dc2626;
  }

  .value-icon {
    color: #dc2626;
    margin-bottom: 1.5rem;
  }

  .value-card h3 {
    font-family: 'Lexend', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .value-card p {
    font-family: 'Lexend', sans-serif;
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
  }

  /* Galería de Imágenes */
  .about-gallery {
    padding: 5rem 0;
    background: #f8fafc;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1;
    cursor: pointer;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-image {
    transform: scale(1.1);
  }

  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(220, 38, 38, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .gallery-item:hover .gallery-overlay {
    opacity: 1;
  }

  .gallery-text {
    color: white;
    font-family: 'Lexend', sans-serif;
    font-weight: 600;
    text-align: center;
    padding: 1rem;
  }

  /* Sección del Equipo */
  .about-team {
    padding: 5rem 0;
    background: #ffffff;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .team-card {
    text-align: center;
    background: #f8fafc;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: #dc2626;
  }

  .team-image {
    height: 250px;
    overflow: hidden;
  }

  .member-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .team-card:hover .member-photo {
    transform: scale(1.1);
  }

  .team-info {
    padding: 1.5rem;
  }

  .team-info h3 {
    font-family: 'Lexend', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .team-position {
    display: block;
    font-family: 'Lexend', sans-serif;
    color: #dc2626;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .team-info p {
    font-family: 'Lexend', sans-serif;
    color: #6b7280;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
  }

  /* Call to Action Final */
  .about-cta {
    padding: 5rem 0;
    background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
    color: white;
  }

  .about-cta h2 {
    font-family: 'Lexend', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .about-cta p {
    font-family: 'Lexend', sans-serif;
    font-size: 1.25rem;
    color: #d1d5db;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .about-grid {
      gap: 3rem;
    }

    .values-grid,
    .gallery-grid,
    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1.5rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .about-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .history-stats {
      justify-content: center;
      gap: 1.5rem;
    }

    .values-grid,
    .gallery-grid,
    .team-grid {
      grid-template-columns: 1fr;
    }

    .about-history,
    .about-video,
    .about-values,
    .about-gallery,
    .about-team,
    .about-cta {
      padding: 3rem 0;
    }

    .corporate-video {
      height: 300px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .section-title {
      font-size: 1.75rem;
    }

    .history-stats {
      flex-direction: column;
      gap: 1rem;
    }

    .about-cta h2 {
      font-size: 2rem;
    }

    .gallery-grid {
      gap: 1rem;
    }
  }
</style>

<script>
  // Script para controlar el video
  document.addEventListener('DOMContentLoaded', function() {
    const video = document.querySelector('.corporate-video');
    const playButton = document.getElementById('play-video');
    const videoOverlay = document.querySelector('.video-overlay');

    if (playButton && video) {
      playButton.addEventListener('click', function() {
        video.play();
        videoOverlay.style.display = 'none';
      });

      video.addEventListener('pause', function() {
        videoOverlay.style.display = 'flex';
      });

      video.addEventListener('ended', function() {
        videoOverlay.style.display = 'flex';
      });
    }
  });
</script>