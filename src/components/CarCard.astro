---
export interface Car {
  _id: string;
  brand: string;
  model: string;
  year: number;
  pricePerDay: number;
  category: string;
  transmission: string;
  seats: number;
  fuelType: string;
  features: string[];
  images: string[];
  available: boolean;
  description?: string;
}

interface Props {
  car: Car;
}

const { car } = Astro.props;
---

<a href={`/catalogo/${car._id}`} class="car-card">
  <div class="car-card__image-container">
    <img 
      src={car.images[0] || '/images/car-placeholder.jpg'} 
      alt={`${car.brand} ${car.model} ${car.year}`}
      class="car-card__image"
      loading="lazy"
    />
    {!car.available && <div class="car-card__badge">No Disponible</div>}
    <div class="car-card__overlay">
      <span class="car-card__view-details">Ver Detalles</span>
    </div>
  </div>

  <div class="car-card__content">
    <!-- Header Principal -->
    <div class="car-card__header">
      <div class="car-card__title-section">
        <h3 class="car-card__title">{car.brand} {car.model}</h3>
        <span class="car-card__year">{car.year}</span>
      </div>
      <div class="car-card__price">
        <span class="car-card__price-amount">${car.pricePerDay}</span>
        <span class="car-card__price-period">/día</span>
      </div>
    </div>

    <!-- Categoría destacada -->
    <div class="car-card__category">
      <span class="car-card__category-badge">{car.category}</span>
    </div>

    <!-- Especificaciones compactas -->
    <div class="car-card__specs-grid">
      <div class="car-card__spec-item">
        <div class="car-card__spec-icon">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
          </svg>
        </div>
        <span class="car-card__spec-text">
          {car.transmission === 'automatica' ? 'Automática' : 'Manual'}
        </span>
      </div>

      <div class="car-card__spec-item">
        <div class="car-card__spec-icon">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
            <path d="M7 13c1.66 0 3-1.34 3-3S8.66 7 7 7s-3 1.34-3 3 1.34 3 3 3zm12-6h-8v7H3V7H1v10h22v-6c0-2.21-1.79-4-4-4z"/>
          </svg>
        </div>
        <span class="car-card__spec-text">{car.seats} Asientos</span>
      </div>

      <div class="car-card__spec-item">
        <div class="car-card__spec-icon">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/>
          </svg>
        </div>
        <span class="car-card__spec-text">
          {car.fuelType === 'gasolina' ? 'Gasolina' : 
           car.fuelType === 'diesel' ? 'Diésel' : 
           car.fuelType === 'electrico' ? 'Eléctrico' : 'Híbrido'}
        </span>
      </div>
    </div>

    <!-- Footer con acción -->
    <div class="car-card__footer">
      <div class="car-card__action">
        <span class="car-card__action-text">Reservar Ahora</span>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
        </svg>
      </div>
    </div>
  </div>
</a>

<style>
  .car-card {
    display: block;
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
    border: 1px solid #f1f5f9;
    overflow: hidden;
    position: relative;
    height: fit-content;
  }

  .car-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    border-color: #e2e8f0;
  }

  /* Contenedor de imagen */
  .car-card__image-container {
    position: relative;
    height: 180px;
    overflow: hidden;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .car-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .car-card:hover .car-card__image {
    transform: scale(1.08);
  }

  .car-card__badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: #64748b;
    color: white;
    padding: 6px 10px;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    z-index: 2;
  }

  .car-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(15, 23, 42, 0.85);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .car-card:hover .car-card__overlay {
    opacity: 1;
  }

  .car-card__view-details {
    color: white;
    font-weight: 600;
    font-size: 0.85rem;
    letter-spacing: 0.5px;
  }

  /* Contenido */
  .car-card__content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* Header */
  .car-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .car-card__title-section {
    flex: 1;
    min-width: 0;
  }

  .car-card__title {
    font-family: 'Lexend', sans-serif;
    font-size: 1.3rem;
    font-weight: 700;
    color: #0f172a;
    margin: 0 0 0.25rem 0;
    line-height: 1.2;
    letter-spacing: -0.01em;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .car-card__year {
    font-family: 'Lexend', sans-serif;
    font-size: 0.8rem;
    color: #64748b;
    font-weight: 500;
    background: #f8fafc;
    padding: 2px 8px;
    border-radius: 12px;
    display: inline-block;
  }

  .car-card__price {
    display: flex;
    align-items: baseline;
    gap: 0.125rem;
    flex-shrink: 0;
  }

  .car-card__price-amount {
    font-family: 'Lexend', sans-serif;
    font-size: 1.4rem;
    font-weight: 700;
    color: #dc2626;
    line-height: 1;
  }

  .car-card__price-period {
    font-size: 0.75rem;
    color: #94a3b8;
    font-weight: 500;
  }

  /* Categoría */
  .car-card__category {
    margin: -0.25rem 0;
  }

  .car-card__category-badge {
    display: inline-block;
    background: #fef3c7;
    color: #92400e;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Especificaciones en grid */
  .car-card__specs-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
    margin: 0.25rem 0;
  }

  .car-card__spec-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem;
    background: #f8fafc;
    border-radius: 8px;
    transition: background-color 0.2s ease;
  }

  .car-card:hover .car-card__spec-item {
    background: #f1f5f9;
  }

  .car-card__spec-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    color: #64748b;
    flex-shrink: 0;
  }

  .car-card__spec-icon svg {
    width: 12px;
    height: 12px;
  }

  .car-card__spec-text {
    font-size: 0.75rem;
    color: #475569;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Footer con acción */
  .car-card__footer {
    margin-top: 0.25rem;
  }

  .car-card__action {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: #0f172a;
    color: white;
    border-radius: 10px;
    font-family: 'Lexend', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .car-card:hover .car-card__action {
    background: #dc2626;
    transform: translateY(-1px);
  }

  .car-card__action-text {
    letter-spacing: 0.25px;
  }

  .car-card__action svg {
    transition: transform 0.2s ease;
  }

  .car-card:hover .car-card__action svg {
    transform: translateX(2px);
  }

  /* === RESPONSIVE DESIGN === */

  /* Tablets */
  @media (max-width: 768px) {
    .car-card__image-container {
      height: 160px;
    }

    .car-card__content {
      padding: 1rem;
      gap: 0.625rem;
    }

    .car-card__title {
      font-size: 1.2rem;
    }

    .car-card__price-amount {
      font-size: 1.3rem;
    }

    .car-card__specs-grid {
      gap: 0.375rem;
    }

    .car-card__spec-text {
      font-size: 0.7rem;
    }
  }

  /* Móviles */
  @media (max-width: 480px) {
    .car-card {
      border-radius: 12px;
    }

    .car-card__image-container {
      height: 140px;
    }

    .car-card__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.375rem;
    }

    .car-card__price {
      align-self: flex-start;
    }

    .car-card__title {
      font-size: 1.1rem;
    }

    .car-card__specs-grid {
      grid-template-columns: 1fr;
      gap: 0.25rem;
    }

    .car-card__spec-item {
      padding: 0.5rem;
      justify-content: center;
    }

    .car-card__action {
      padding: 0.625rem 0.875rem;
      font-size: 0.8rem;
    }
  }

  /* Móviles pequeños */
  @media (max-width: 360px) {
    .car-card__content {
      padding: 0.875rem;
    }

    .car-card__title {
      font-size: 1rem;
    }

    .car-card__price-amount {
      font-size: 1.2rem;
    }
  }

  /* Estados de focus para accesibilidad */
  .car-card:focus-visible {
    outline: 2px solid #dc2626;
    outline-offset: 2px;
  }
</style>